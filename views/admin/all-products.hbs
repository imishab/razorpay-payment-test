
                <a href="/admin/add-product">Add a Product</a>
        
            <div >
                <table >
                    <thead >
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                            <th scope="col">Image</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr >
                            <th scope="row">{{incremented @index}}</th>
                            <td>{{this.Name}}</td>
                            <td>{{this.Price}}</td>
                            <td>{{this.Description}}</td>
                            <td><img src="/images/product-images/{{this._id}}.png" alt="" style="width: 3rem"></td>
                          
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
         