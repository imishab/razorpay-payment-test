    {{#if cartProducts}}

            <table>
                <thead>
                    <tr>
                        <th scope="col">Item</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each cartProducts}}
                    <tr>
                        <td><img style="width: 70px; height: 70px;"
